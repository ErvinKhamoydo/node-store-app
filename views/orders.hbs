<h1>My orders</h1>

{{#if orders.length}}
   <div class="row">
      {{#each orders}}
            <div class="col s5">
               <div class="card order-card">
                  <div class="card-content order-card-content">
                     <span class="card-title">
                        Order: <small>{{_id}}</small>
                     </span>
                     <p class="date">Date: {{date}}</p>
                     <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

                     <ol>
                        {{#each courses}}
                           <li>
                              {{course.title}} (x<strong>{{count}}</strong>)
                           </li>
                        {{/each}}
                     </ol>

                     <hr>

                     <p>Price: <span class="price">{{price}}</span></p>
                  </div>
               </div>
            </div>
      {{/each}}
   </div>
{{else}}
   <p>There are no orders</p>
{{/if}}