<h1>Cart</h1>

<div id="cart-items">
   {{#if courses.length}}
      <table>
         <thead>
            <tr>
               <th>Course name</th>
               <th>Quantity</th>
               <th>Actions</th>
            </tr>
         </thead>
         <tbody>
            {{#each courses}}
               <tr>
                  <td>{{title}}</td>
                  <td>{{count}}</td>
                  <td>
                     <button class="btn btn-small remove-item-from-cart" data-id="{{id}}" data-csrf="{{@root.csrf}}">Delete</button>
                  </td>
               </tr>
            {{/each}}
         </tbody>
      </table>

      <p>
         <strong>Price:</strong>
         <span class="cart-total-price price">{{price}}</span>
      </p>

      <form action="/orders" method="POST">
         <input type="hidden" name="_csrf" value="{{csrf}}">
         <button type="submit" class="btn">Buy</button>
      </form>
   {{else}}
      <p>Cart is empty</p>
   {{/if}}
</div>