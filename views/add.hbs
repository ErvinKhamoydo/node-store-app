<h1>Add new course</h1>

<form action="/add" method="POST" novalidate>
   <div class="input-field">
      <input id="title" name="title" type="text" class="validate" value="{{data.title}}" required>
      <label for="title">Course name</label>
      <span class="helper-text" data-error="Title is incorrect" data-success="Value is correct"></span>
   </div>

   <div class="input-field">
      <input id="price" name="price" type="number" class="validate" value="{{data.price}}" min="1" required>
      <label for="price">Price</label>
      <span class="helper-text" data-error="Price is incorrect" data-success="Value is correct"></span>
   </div>

   <div class="input-field">
      <input id="img" name="img" type="text" class="validate" value="{{data.img}}" required>
      <label for="img">URL logo</label>
      <span class="helper-text" data-error="URL is incorrect" data-success="Value is correct"></span>
   </div>

   <input type="hidden" name="_csrf" value="{{csrf}}">

   {{#if error}}
      <p class="alert">{{error}}</p>
   {{/if}}

   <button class="btn btn-primary">Add course</button>
</form>