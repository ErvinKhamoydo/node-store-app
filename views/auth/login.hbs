<div class="auth">
   <div class="row">
      <div class="col s12">
         <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">LogIn</a></li>
            <li class="tab col s6"><a class="active" href="#register">SignUp</a></li>
         </ul>
      </div>

      <div id="login" class="from col s6 offset-s3">
         <form action="/auth/login" method="POST">
            <div class="input-field">
               <input id="email" name="email" type="email" class="validate" required>
               <label for="email">Email</label>
               <span class="helper-text" data-error="Invalid email!" data-success="The email is correct!"></span>
            </div>

            <div class="input-field">
               <input id="password" name="password" type="password" class="validate" required>
               <label for="password">Password</label>
               <span class="helper-text" data-error="Invalid password!" data-success="The password is correct!"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            {{#if loginError}}
               <p class="alert">{{loginError}}</p>
            {{/if}}

            <button class="btn btn-primary" type="submit">LogIn</button>
         </form>
      </div>

      <div id="register" class="from col s6 offset-s3">
         <form action="/auth/register" method="POST">
            <div class="input-field">
               <input id="name" name="name" type="text" class="validate" required>
               <label for="name">Your name</label>
               <span class="helper-text" data-error="Invalid name!" data-success="The name is correct!"></span>
            </div>

            <div class="input-field">
               <input id="remail" name="email" type="email" class="validate" required>
               <label for="remail">Email</label>
               <span class="helper-text" data-error="Invalid email!" data-success="The email is correct!"></span>
            </div>

            <div class="input-field">
               <input id="rpassword" name="password" type="password" class="validate" required>
               <label for="rpassword">Password</label>
               <span class="helper-text" data-error="Invalid password!" data-success="The password is correct!"></span>
            </div>

            <div class="input-field">
               <input id="confirm" name="confirm" type="password" class="validate" required>
               <label for="confirm">Password again</label>
               <span class="helper-text" data-error="Invalid password!" data-success="The password is correct!"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            {{#if registerError}}
               <p class="alert">{{registerError}}</p>
            {{/if}}

            <button class="btn btn-primary" type="submit">SignUp</button>
         </form>
      </div>
   </div>
</div>